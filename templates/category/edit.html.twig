

{% extends 'base.html.twig' %}

{% block title %}Update Category{% endblock %}

{% block body %}
    <!-- Page Title -->
    <h1 class="text-4xl font-bold text-center text-blue-500 mt-12 mb-8">Edit Category</h1>

    <!-- Form Container -->
    <div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
        <!-- Form Start -->
        {{ form_start(form) }}

        <!-- Category Name Field -->
        <div class="mb-6">
            {{ form_label(form.categoryName, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.categoryName, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.categoryName) }}
        </div>

        <!-- Save Button -->
        <div class="text-center">
            {{ form_widget(form.save, {'attr': {'class': 'w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200'}}) }}
        </div>
        
        <!-- Form End -->
        {{ form_end(form) }}
    </div>

    <!-- Back to Category List Button -->
    <div class="mt-8 text-center">
        <a href="{{ path('category_list') }}" class="text-blue-500 hover:text-blue-600 font-semibold underline">Back to Category List</a>
    </div>
{% endblock %}



